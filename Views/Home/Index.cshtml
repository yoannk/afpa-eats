@model AfpEat.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Restaurants</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Type Cuisines</a>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="list-group">
            @foreach (var item in Model.Restaurants)
            {
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    @item.Nom
                    <span class="badge badge-primary badge-pill">@item.Budget €</span>
                </a>
            }
        </div>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        @foreach (var item in Model.TypeCuisines)
        {
        <a href="#" class="list-group-item list-group-item-action d-flex flex-column">
            <img class="homeTypeCuisine" src="@Url.Content("~/Ressources/Images/TypeCuisine/")@item.Photo.Nom" />
            <div class="d-flex justify-content-between align-items-center mt-3">
                <h4>@item.Nom</h4>
                <span class="badge badge-primary badge-pill">@item.Restaurants.Count Restaurants</span>
            </div>
            
        </a>

        }
    </div>
</div>