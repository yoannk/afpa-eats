@model AfpEat.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Restaurants</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Type Cuisines</a>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

        <div class="row row-cols-md-3">
            @foreach (var item in Model.Restaurants)
            {
                <div class="col mb-4">
                    <div class="card">
                        <a href="@Url.Action("Details", "Restaurants", new { id = item.IdRestaurant })">
                            <img src="@(Url.Content("~/Ressources/Images/Restaurants/" + item.Photos.First()?.Nom ?? "Default.jpg"))" class="card-img-top" alt="...">
                        </a>

                        <div class="card-body">
                            <a class="text-decoration-none text-reset" href="@Url.Action("Details", "Restaurants", new { id = item.IdRestaurant })">
                                <h5 class="card-title">@item.Nom</h5>
                            </a>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                <a href="@Url.Action("Details", "Restaurants", new { id = item.IdRestaurant })" class="btn btn-primary">
                                    Commander
                                </a>
                            </small>
                        </div>
                    </div>
                </div>

            }
        </div>

        <nav>
            <ul class="pagination">

                @for(int i = 0; i < Model.itemsPerPage; i++)
                {

                }

                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>

    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        @foreach (var item in Model.TypeCuisines)
        {
            <a href="@Url.Action("ParSpecialitee", "Restaurants", new { idTypeCuisine = item.IdTypeCuisine })" class="list-group-item list-group-item-action d-flex flex-column">
                <img class="homeTypeCuisine" src="@Url.Content("~/Ressources/Images/TypeCuisine/")@item.Photo.Nom" />
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h4>@item.Nom</h4>
                    <span class="badge badge-primary badge-pill">@item.Restaurants.Count Restaurants</span>
                </div>

            </a>

        }
    </div>
</div>