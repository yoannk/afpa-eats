@using AfpEat.Utilities

@if (TempData["FlashMessage"] is FlashMessage flash)
{
    <script type="text/javascript">
        $(document).ready(function () {
            notify('@flash.Type.ToString().ToLower()', '@flash.Message');
        });
    </script>
}

<script type="text/javascript">
    function notify(type, message) {
        $.notify({
            message: message
        }, {
            type: type,
            z_index: 10000000,
            offset: { x: 21, y: 75 },
            animate: { enter: 'animated fadeInRight', exit: 'animated fadeOutRight' }
        });
    }
</script>
